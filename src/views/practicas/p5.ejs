    float z;    // creamos un dato para el resultado de tipo flotante.
          
    cout&lt;&lt;"Ingresa el primer número: ";
    cin&gt;&gt;x;       //se lee el primer dato.      

           
    cout&lt;&lt;"Ingresa el Segundo número: ";
    cin&gt;&gt;y;       //se lee el segundo dato.      

    
    //Operaciones básicas:

    z=x+y;    //suma
    cout&lt;&lt;"El resultado de suma es: "&lt;&lt;z;

    z=x-y;    //resta
    cout&lt;&lt;"El resultado de resta es: "&lt;&lt;z;

    z=x/y;    //división
    cout&lt;&lt;"El resultado de división es: "&lt;&lt;z;

